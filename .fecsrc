{
    "files": ["src/frontend/**", "src/frontend", "script/**", "script"],
    "eslint": {
        "env": {
            "es6": true,
            "node": true,
            "browser": true
        },
        "rules": {
            "indent": ["off", 4],
            "fecs-imports-on-top": "off",
            "fecs-eol-alast": "off",
            "fecs-no-extra-semi": "off",
            "fecs-indent": "error",
            "fecs-valid-jsdoc": "off",
            "fecs-prefer-class": "off",
            "fecs-arrow-body-style": "off",
            "fecs-export-on-declare": "off",
            "fecs-min-vars-per-destructure": "off",
            "babel/object-curly-spacing": "off",
            "max-len": "off",
            "no-console": "off",
            "fecs-camelcase": "off",
            "comma-dangle": [
                "error",
                {
                    "arrays": "ignore",
                    "objects": "ignore",
                    "imports": "ignore",
                    "exports": "ignore",
                    "functions": "ignore"
                }
            ],
            "semi": "error",
            "camelcase": "off",
            "no-unused-vars": "error",
            "no-var": "off",
            "no-trailing-spaces": "off",
            "babel/new-cap": "off"
        },

        "globals": {
            "__DEVELOPMENT__": false,
            "_i": false,
            "eap_enterprise_login": false
        },
        "parserOptions": {
            "sourceType": "module"
        }
    },
    "lesslint": {
        "operate-unit": false,
        "hex-color": false,
        "block-indent": false,
        "require-newline": false,
        "leading-zero": false,
        "require-around-space": false
    }
}
